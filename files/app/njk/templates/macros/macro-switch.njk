{# Checbox #}
{% macro checkbox(class, class_label, for_label, name_input, class_input, attr_input, class_svg, value_input, text, svg_name, icon=true) %}
  <div class="checkbox {{ class }}">
    <label for="{{ for_label }}" class="checkbox__label {{ class_label }}">
      <input type="checkbox" name="{{ name_input }}" id="{{ for_label }}" class="checkbox__input {{ class_input }}" value="{{ value_input }}" {{ attr_input }}>
      <span class="checkbox__block">
        {% if(icon == true) %}
          <svg class="checkbox__icon {{ class_svg }}">
            <use xlink:href="#{{ svg_name }}" />
          </svg>
        {% endif %}
      </span>
      <span class="checkbox__text {{ class_span }}">
        {{ text | safe }}
      </span>
    </label>
  </div>
{% endmacro %}



{# Segmented-control__item #}
{% macro segmented_control_item(class_li, class_label, for_label, attr_input, value_input, name_input, svg_name, class_svg, text, title, type="radio", icon=false) %}
  <li class="segmented-control__item {{ class_li }}">
    <input class="segmented-control__input" id="{{ for_label }}" type="{{ type }}" value="{{ value_input }}" name="{{ name_input }}" {{ attr_input }}>
    <label class="segmented-control__label btn {{ class_label }}" for="{{ for_label }}">
      {% if(icon == true) %}
        <svg class="svg-icon {{ class_svg }}">
          <use xlink:href="#{{ svg_name }}" />
        </svg>
      {% endif %}

      {{ text | safe }}
    </label>
  </li>
{% endmacro %}